@page "{id}"
@model ContactManagementApp.Pages.ContactDetailsModel
@{
    ViewData["Title"] = "Contact Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>Name:</h3>
    <p>@Model.Contact.Name</p>
</div>

<div>
    <h3>Contact:</h3>
    <p>@Model.Contact.ContactNumber</p>
</div>

<div>
    <h3>Email:</h3>
    <p>@Model.Contact.Email</p>
</div>

<!-- Adicione o botão de exclusão -->
<form method="post" asp-page-handler="Delete" asp-route-id="@Model.Contact.ID" onsubmit="return confirm('Are you sure you want to delete this contact?');">
    <button type="submit" class="btn btn-danger">Delete Contact</button>
</form>

<a asp-page="/Index">Back to Contacts List</a>
